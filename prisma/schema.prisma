generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          String   @id @default(cuid())
  author      String
  mark        String
  modelCar    String
  description String?
  images      Images[]
  createdAt   DateTime @default(now())
}

model Images {
  id        String   @id @default(cuid())
  imageUrl  String
  cardId    String
  car       Car      @relation(fields: [cardId], references: [id])
  createdAt DateTime @default(now())
}
